<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:background="@android:color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/red_recycler_bg">

        <RelativeLayout
            android:id="@+id/relativeLayout_addLoyalty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView_row_list_myCards"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/textViewTitle_row_list_myCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_row_list_myCards"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/imageView_row_list_myCards"
                android:text="LAlQila"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewDetails_row_list_myCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle_row_list_myCards"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/imageView_row_list_myCards"
                android:text="food"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
