<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewResideMenuProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/textViewNameResideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/imageViewResideMenuProfile"
        android:text="Arsalan Shah"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/listview_nav_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageViewResideMenuProfile"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" />

</RelativeLayout>