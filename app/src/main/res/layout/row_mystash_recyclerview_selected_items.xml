<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layoutStash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:padding="0dp"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layoutStash"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:background="@android:color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/red_recycler_bg">

        <RelativeLayout
            android:id="@+id/container_item_mystash_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/row_recyclerview_avatar_mystash"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/row_recyclerview_title_mystash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/row_recyclerview_avatar_mystash"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/row_recyclerview_avatar_mystash"
                android:text="Title Recycler View "
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/row_recyclerview_desc_mystash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_recyclerview_title_mystash"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/row_recyclerview_avatar_mystash"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Place to dive into android programming"
                android:textColor="#ffff"
                android:textSize="14sp" />
        </RelativeLayout>

    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>