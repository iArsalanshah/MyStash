<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/red_recycler_bg" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_item_mystash_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_recyclerview_avatar_mystash"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/row_recyclerview_title_mystash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/row_recyclerview_avatar_mystash"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@id/row_recyclerview_avatar_mystash"
            android:text="Title Recycler View "
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_recyclerview_desc_mystash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_recyclerview_title_mystash"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/row_recyclerview_avatar_mystash"
            android:ellipsize="end"
            android:text="Place to dive into android programming"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#ffff"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>