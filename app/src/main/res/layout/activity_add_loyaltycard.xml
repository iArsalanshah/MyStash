<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    tools:context="com.example.mystashapp.mystashappproject.home.mycards_box.Add_LoyaltyCard">

    <RelativeLayout
        android:id="@+id/container_addLoyalty"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="imgBack_MyCards"
            android:padding="12dp"
            android:src="@drawable/img_toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Loyalty Card"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <SearchView
        android:id="@+id/searchView_Addcards"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/container_addLoyalty"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/white" />

    <ListView
        android:id="@+id/listView_Add_LoyaltyCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_create_loyalty"
        android:layout_below="@+id/searchView_Addcards"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:dividerHeight="6dp" />

    <Button
        android:id="@+id/button_create_loyalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:background="@android:color/black"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Create your own card"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>
