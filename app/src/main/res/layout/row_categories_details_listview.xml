<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/red_recycler_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_row_list_coupons"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/textView_row_list_coupons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_details"
        android:layout_alignStart="@+id/tv_item_details"
        android:layout_alignTop="@+id/imageView_row_list_coupons"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_row_list_coupons"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imageView_row_list_coupons"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</RelativeLayout>